{
	"name": "my-fullstack-setup",
	"private": true,
	"packageManager": "pnpm@10.17.0",
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"clean": "turbo clean && rimraf .turbo node_modules pnpm-lock.yaml .idea",
		"format": "biome format . --write",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:migrate:": "turbo -F server db:migrate:",
		"db:migrate:up": "turbo -F server db:migrate:up",
		"db:migrate:down": "turbo -F server db:migrate:down",
		"db:migrate:down:all": "turbo -F server db:migrate:down:all",
		"db:migrate:full": "turbo -F server db:migrate:full",
		"db:up": "turbo -F server db:up",
		"db:down": "turbo -F server db:down",
		"redis:up": "turbo -F server redis:up",
		"redis:down": "turbo -F server redis:down",
		"setup": "turbo -F server setup",
		"encrypt:all": "turbo -F @my-fullstack-setup/server -F @my-fullstack-setup/web -F @my-fullstack-setup/native encrypt:all",
		"decrypt:all": "turbo -F @my-fullstack-setup/server -F @my-fullstack-setup/web -F @my-fullstack-setup/native decrypt:all",
		"decrypt": "dotenvx decrypt -fk ./.env.keys"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.51.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	}
}
