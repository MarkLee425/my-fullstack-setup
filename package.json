{
	"name": "my-fullstack-setup",
	"private": true,
	"packageManager": "pnpm@10.17.0",
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"clean": "turbo clean && rimraf .turbo node_modules pnpm-lock.yaml .idea",
		"format": "biome format . --write",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F @my-fullstack-setup/native dev",
		"dev:web": "turbo -F @my-fullstack-setup/web dev",
		"dev:server": "turbo -F @my-fullstack-setup/server dev",
		"db:migrate": "turbo -F @my-fullstack-setup/server db:migrate",
		"db:migrate:up": "turbo -F @my-fullstack-setup/server db:migrate:up",
		"db:migrate:down": "turbo -F @my-fullstack-setup/server db:migrate:down",
		"db:migrate:down:all": "turbo -F @my-fullstack-setup/server db:migrate:down:all",
		"db:migrate:full": "turbo -F @my-fullstack-setup/server db:migrate:full",
		"db:up": "turbo -F @my-fullstack-setup/server db:up",
		"db:down": "turbo -F @my-fullstack-setup/server db:down",
		"redis:up": "turbo -F @my-fullstack-setup/server redis:up",
		"redis:down": "turbo -F @my-fullstack-setup/server redis:down",
		"setup:all": "turbo -F @my-fullstack-setup/server setup:all",
		"encrypt": "dotenvx encrypt -fk ./.env.keys",
		"encrypt:all": "turbo -F @my-fullstack-setup/server -F @my-fullstack-setup/web -F @my-fullstack-setup/native encrypt:all",
		"decrypt:all": "turbo -F @my-fullstack-setup/server -F @my-fullstack-setup/web -F @my-fullstack-setup/native decrypt:all",
		"decrypt": "dotenvx decrypt -fk ./.env.keys",
		"rotate:all": "dotenvx rotate -fk ./.env.keys -f apps/web/.env -f apps/server/.env -f apps/server/.env.docker -f apps/native/.env"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.51.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	}
}
