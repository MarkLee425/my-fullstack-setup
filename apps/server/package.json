{
	"name": "@my-fullstack-setup/server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"db:migrate": "DATABASE_URL=$(grep DB_URL .env.docker | cut -d '=' -f2) node -r esbuild-register ../../node_modules/node-pg-migrate/bin/node-pg-migrate.js -m ./src/db/postgres/migrations -j ts",
		"db:migrate:up": "pnpm run db:migrate up",
		"db:migrate:down": "pnpm run db:migrate down",
		"db:migrate:down:all": "pnpm run db:migrate down 100000",
		"db:migrate:full": "pnpm run db:migrate:down:all && pnpm run db:migrate:up",
		"db:up": "docker-compose --env-file ../../.env.docker up -d db",
		"db:down": "docker-compose --env-file ../../.env.docker down db",
		"redis:up": "docker-compose --env-file ../../.env.docker up -d redis",
		"redis:down": "docker-compose --env-file ../../.env.docker down redis",
		"setup": "pnpm run db:down && pnpm run redis:down && pnpm run db:up && pnpm run redis:up && pnpm run db:migrate:up"
	},
	"dependencies": {
		"@better-auth/expo": "^1.3.7",
		"@fastify/cors": "^11.0.1",
		"@my-fullstack-setup/constants": "workspace:*",
		"@node-rs/argon2": "^2.0.2",
		"@trpc/client": "^11.5.0",
		"@trpc/server": "^11.5.0",
		"better-auth": "^1.3.7",
		"fastify": "^5.3.3",
		"nodemailer": "^7.0.6",
		"postgres": "^3.4.7",
		"redis": "^5.8.2",
		"validator": "^13.15.15",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"@types/node": "^22.13.11",
		"@types/nodemailer": "^7.0.1",
		"@types/pg": "^8.15.5",
		"esbuild": "^0.25.8",
		"esbuild-register": "^3.6.0",
		"node-pg-migrate": "^8.0.3",
		"tsdown": "^0.14.1",
		"tsx": "^4.19.2",
		"typescript": "^5.8.2"
	}
}
