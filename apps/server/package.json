{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "dmno run -w -- tsx watch src/index.ts",
		"start": "dmno run -- node dist/index.js",
		"db:migrate": "node-pg-migrate -m ./src/db/postgres/migrations -j ts"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"@dmno/fastify-integration": "^0.0.2",
		"@fastify/cors": "^11.0.1",
		"@node-rs/argon2": "^2.0.2",
		"@repo/constants": "workspace:*",
		"@trpc/client": "^11.4.2",
		"@trpc/server": "^11.4.2",
		"better-auth": "^1.3.4",
		"dmno": "^0.0.39",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.2",
		"fastify": "^5.3.3",
		"pg": "^8.14.1",
		"redis": "^5.8.2",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"tsdown": "^0.12.9",
		"typescript": "^5.8.2",
		"tsx": "^4.19.2",
		"@types/node": "^22.13.11",
		"drizzle-kit": "^0.31.2",
		"node-pg-migrate": "^8.0.3",
		"@types/pg": "^8.11.11"
	}
}
