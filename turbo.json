{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"clean": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**",
				"storybook-static/**"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"encrypt:all": {
			"dependsOn": ["^encrypt:all"],
			"cache": false
		},
		"decrypt:all": {
			"dependsOn": ["^decrypt:all"],
			"cache": false
		}
	}
}
