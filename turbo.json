{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"clean": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**",
				"storybook-static/**"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"db:migrate": {
			"dependsOn": ["^db:migrate"],
			"cache": false
		},
		"db:migrate:full": {
			"dependsOn": ["^db:migrate:full"],
			"cache": false
		},
		"db:migrate:up": {
			"dependsOn": ["^db:migrate:up"],
			"cache": false
		},
		"db:migrate:down": {
			"dependsOn": ["^db:migrate:down"],
			"cache": false
		},
		"db:migrate:down:all": {
			"dependsOn": ["^db:migrate:down:all"],
			"cache": false
		},
		"db:migrate:down:full": {
			"dependsOn": ["^db:migrate:down:full"],
			"cache": false
		},
		"db:up": {
			"dependsOn": ["^db:up"],
			"cache": false
		},
		"db:down": {
			"dependsOn": ["^db:down"],
			"cache": false
		},
		"redis:up": {
			"dependsOn": ["^redis:up"],
			"cache": false
		},
		"redis:down": {
			"dependsOn": ["^redis:down"],
			"cache": false
		},
		"setup:all": {
			"dependsOn": ["^setup:all"],
			"cache": false
		},
		"encrypt:all": {
			"dependsOn": ["^encrypt:all"],
			"cache": false
		},
		"decrypt:all": {
			"dependsOn": ["^decrypt:all"],
			"cache": false
		}
	}
}
